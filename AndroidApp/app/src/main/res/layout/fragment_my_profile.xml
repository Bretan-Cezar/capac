<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/user_details_card_view"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/user_profile_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_mindorks_logo"
                android:background="@drawable/profile_picture_border"/>
            <TextView
                android:layout_below="@id/user_profile_picture"
                android:id="@+id/user_first_and_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mihai Popescu"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:padding="5dp"
                style="@style/TextAppearance.Text.Bold"
                />
            <TextView
                android:padding="5dp"
                android:gravity="center"
                android:id="@+id/user_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_first_and_last_name"
                style="@style/TextAppearance.Text.Light"
                android:text="Member since: 26th Sep 2018"
                android:textSize="15sp"/>
            <RatingBar
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_level"
                android:layout_centerHorizontal="true"
                android:rating="3.5"/>
            </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_below="@id/user_details_card_view"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/firends_in_card_view"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Friends"
                    android:drawableStart="@drawable/ic_people_black_24dp"
                    android:drawablePadding="20dp"
                    style="@style/TextAppearance.Text.Regular"
                    android:textSize="20sp"/>
                <TextView
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_below="@id/firends_in_card_view"
                    android:padding="15dp"
                    android:id="@+id/history_in_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:drawableStart="@drawable/ic_history_black_24dp"
                    android:drawablePadding="20dp"
                    style="@style/TextAppearance.Text.Regular"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_below="@id/history_in_card_view"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Leaderboards"
                    android:drawableStart="@drawable/ic_stars_black_24dp"
                    android:drawablePadding="20dp"
                    style="@style/TextAppearance.Text.Regular"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>