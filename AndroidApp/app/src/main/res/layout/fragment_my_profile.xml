<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/user_profile_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_mindorks_logo"
                android:background="@drawable/profile_picture_border"/>
            <TextView
                android:layout_below="@id/user_profile_picture"
                android:id="@+id/user_first_and_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mihai Popescu"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:padding="5dp"
                style="@style/TextAppearance.Text.Condensed.Bold"
                />
            <TextView

                android:gravity="center"
                android:id="@+id/user_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_first_and_last_name"
                style="@style/TextAppearance.Text.Light"
                android:text="User Level: 102"
                android:textSize="15sp"/>
            </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>