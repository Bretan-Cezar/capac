<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:gravity="center"
    android:id="@+id/event_cell_title_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/corner_border_gray">
    <LinearLayout
        android:baselineAligned="false"
        android:id="@+id/title_side_bar"
        android:layout_centerVertical="true"
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:orientation="vertical">
        <Button
            android:layout_weight="1"
            android:id="@+id/event_title_check_btn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/ic_check_24dp"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/event_title_dismiss_btn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/ic_close_black_24dp" />

        <Button
            android:layout_weight="1"
            android:id="@+id/expand_title_cell"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/ic_expand_more_black_24dp" />
    </LinearLayout>
        <TextView
            android:layout_toEndOf="@id/title_side_bar"
            android:paddingEnd="10dp"
            android:id="@+id/time_in_title_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_access_time_black_24dp"
            android:text="@string/mock_time"
            android:layout_gravity="center"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:textStyle="bold" />
        <TextView
            android:paddingEnd="10dp"
            android:layout_toEndOf="@id/time_in_title_cell"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:id="@+id/date_in_title_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_event_black_24dp"
            android:layout_gravity="center"
            android:text="@string/mock_date"
            android:textStyle="bold" />
        <TextView
            android:layout_toEndOf="@id/date_in_title_cell"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:id="@+id/location_in_title_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:text="@string/mock_location"
            android:textStyle="bold" />

    <TextView
        android:layout_toEndOf="@id/title_side_bar"
        android:layout_below="@id/location_in_title_cell"
        android:id="@+id/sport_keyword"
        style="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sport_keyword"
        android:textStyle="bold" />
    <TextView
        android:layout_toEndOf="@id/title_side_bar"
        android:textAppearance="@style/TextAppearance.Text.Bold"
        android:id="@+id/sport_type_in_title_cell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sport_keyword"
        android:text="@string/mock_sport_time"
        android:textStyle="bold" />
    <TextView
        android:layout_alignEnd="@id/location_in_title_cell"
        android:layout_below="@id/location_in_title_cell"
        android:id="@+id/level_keyword"
        style="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skill_level_keyword"
        android:textStyle="bold" />
    <TextView
        android:layout_alignEnd="@id/location_in_title_cell"
        android:id="@+id/skill_level_in_title_cell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Text.Bold"
        android:layout_below="@id/level_keyword"
        android:text="@string/mock_skill_level"
        android:textStyle="bold" />

    <TextView
        android:layout_below="@id/sport_type_in_title_cell"
        android:layout_toEndOf="@id/title_side_bar"
        android:id="@+id/organizer_keyword"
        style="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/organizer_keyword"
        android:textStyle="bold" />
    <TextView
        android:layout_toEndOf="@id/title_side_bar"
        android:id="@+id/organizer_in_title_cell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Text.Bold"
        android:layout_below="@id/organizer_keyword"
        android:text="@string/mock_organizer"
        android:textStyle="bold" />
    <TextView
        android:layout_below="@id/sport_type_in_title_cell"
        android:layout_alignEnd="@id/location_in_title_cell"
        android:id="@+id/going_keyword"
        style="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_of_user_keyword"
        android:textStyle="bold" />
    <TextView
        android:layout_alignEnd="@id/location_in_title_cell"
        android:id="@+id/number_of_users_going_in_title_cell"
        android:layout_width="wrap_content"
        android:textAppearance="@style/TextAppearance.Text.Bold"
        android:layout_height="wrap_content"
        android:layout_below="@id/going_keyword"
        android:text="@string/mock_number_of_users"
        android:textStyle="bold" />
    </RelativeLayout>
